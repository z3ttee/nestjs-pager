{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "declaration": true,
        "outDir": "./dist/cjs",
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "declarationDir": "dist/types",
        "moduleResolution": "node"
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
}